@model CalculatorModel;

    <!--Grade Calculator-->
<div class="calculator">
    <br />
    <h4 class="text-center">Grade Calculator</h4><br />
    
    <form method="post" id="myForm">
        <label>Assignments:</label>
        <input id="assignments" asp-for="Assignments" /><br /><br />
        <label>Group Project:</label>
        <input id="group" asp-for="Projects" /><br /><br />
        <label>Quizzes:</label>
        <input id="quiz" asp-for="Quizzes" /><br /><br />
        <label>Exams:</label>
        <input id="exam" asp-for="Exams" /><br /><br />
        <label>INTEX:</label>
        <input id="intex" asp-for="Intex" /><br /><br />

        <div class="text-center">
            <input class="btn btn-light" id="btnSend" type="submit" value="Calculate">
        </div>

        <div asp-validation-summary="All"></div>

    </form><br />
</div>
<br />
